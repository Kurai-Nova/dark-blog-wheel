{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"],
        "@Assets": ["src/assets/"],
        "@Assets/*": ["src/assets/*"],
        "@Commn": ["src/commons/"],
        "@Commn/*": ["src/commons/*"],
        "@Pages": ["src/pages/"],
        "@Pages/*": ["src/pages/*"]
      },

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
